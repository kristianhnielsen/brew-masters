---
const today = new Date();
const socialMediaIcons = await Astro.glob("/public/assets/icons/social/*.png");
---

<footer class="mt-32 border-t-2 border-midnight p-4 pb-12 text-midnight">
  <div class="grid grid-cols-1 gap-8 md:grid-cols-3">
    <div>
      <h4 class="text-lg font-semibold">Navigation</h4>
      <ul class="mt-2 md:mt-8 flex flex-col gap-4 text-lg">
        <li><a href="/" class="hover:text-brew hover:underline">Home</a></li>
        <li>
          <a href="#about" class="hover:text-brew hover:underline">About Us</a>
        </li>
        <li>
          <a href="#products" class="hover:text-brew hover:underline"
            >Products</a
          >
        </li>
        <li>
          <a href="#contact" class="hover:text-brew hover:underline">Contact</a>
        </li>
        <li>
          <a href="/blog" class="hover:text-brew hover:underline">Blog</a>
        </li>
      </ul>
    </div>
    <div>
      <h4 class="text-lg font-semibold">Follow us on social media</h4>
      <ul class="mt-2 md:mt-8 grid max-w-fit grid-cols-3 gap-4">
        {
          socialMediaIcons.map((icon) => {
            const socialMediaName = icon.default
              .split("/")
              .at(-1)
              .split(".")
              .at(0);
            const imgUrl = icon.default.split("/public").at(-1);

            return (
              <li>
                <a href="/" title={socialMediaName}>
                  <img
                    class="aspect-square w-12"
                    src={imgUrl}
                    alt={socialMediaName}
                  />
                </a>
              </li>
            );
          })
        }
      </ul>
    </div>
    <div>
      <h4 class="text-lg font-semibold">Find us</h4>

      <address class="mt-2 grid gap-2 md:mt-8">
        <p>🏠 Brewers Road No. 8<br/>Copenhagen, Denmark</p>
        <a
          href="http://maps.google.com"
          target="_blank"
          rel="noopener noreferrer"
          class="hover:underline">📌 Google Maps</a
        >

        <p>
          📧 E-mail: <a href="mailto:" class="hover:underline"
            >info@brewmaster.com</a
          >
        </p>
        <p>
          ☎️ Phone: <a href="tel:" class="hover:underline">+99 123 1234 5678</a>
        </p>
      </address>
    </div>
  </div>
  <p class="mt-32 text-center">
    &copy; {today.getFullYear()} Brew Masters. All rights reserved.
  </p>
</footer>
