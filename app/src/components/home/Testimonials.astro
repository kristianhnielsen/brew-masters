---
import SectionLayout from "../../layouts/SectionLayout.astro";
const testimonials = await Astro.glob("../content/testimonials/*.md");
const maxTestimonials: number = 3;
---

<SectionLayout title="What Others Say">
  <card-container class="mt-8 grid grid-cols-1 gap-6 md:grid-cols-3">
    {
      testimonials.map((testimonial, index) => (
        <card class="max-w-[16rem] mx-auto">
          <h3 class="font-bold">{testimonial.frontmatter.name}</h3>
          <p class="text-sm text-slate-400">
            {testimonial.frontmatter.position} at{" "}
            {testimonial.frontmatter.company}
          </p>

          <p class="mt-4 md:mt-8">{testimonial.frontmatter.statement}</p>
        </card>
      ))
    }
  </card-container>
</SectionLayout>
